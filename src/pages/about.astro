</Layout>

<style is:global>
  section {
    .section-img,
    .section-title-img {
      width: 100%;
    }
  }
</style>

<style lang="scss">
  @import "../styles/index.scss";

  .quote {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 3rem auto;
    width: fit-content;

    &__content {
      font-size: 2.5rem;
      font-weight: 500;
      text-align: center;
      margin-bottom: 0.8rem;
      color: rgba(#fd841f, 0.8);
    }

    &__author {
      font-size: 1.5rem;
      font-weight: 400;
      text-align: right;
      margin-left: auto;
      color: rgba(#c6bebc, 0.8);
    }
  }

  .section-body {
    font-size: 1.3rem;
    font-weight: 350;
    line-height: 1.2;
    letter-spacing: 1.2px;
  }

  .socials {
    margin-bottom: 10rem;

    .socials-heading {
      font-size: 3rem;
      font-weight: 500;
      margin-bottom: 5rem;
      letter-spacing: 1.2px;
      text-align: center;
    }

    .socials-image-grid {
      display: grid;
      width: 80%;
      margin: 0 auto;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      gap: 10px;

      img {
        width: 100%;
        border-radius: 5px;
      }

      .social-link-wrapper {
        width: 100%;
        background-color: #fd841f;
        position: relative;
        overflow: hidden;
        border-radius: 5px;

        &.blue {
          background-color: $accent-color;
        }

        img {
          width: 12rem;
          position: absolute;
          left: 50%;
          bottom: 50%;
          transform: translate(-50%, 50%);
          opacity: 1;
          transition: all 0.2s ease-in;
        }
      }
    }
  }
</style>
