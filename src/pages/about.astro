<style lang="scss">
  @import "../styles/index.scss";

  .quote {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 3rem auto;
    width: fit-content;

    &__content {
      font-size: 2.5rem;
      font-weight: 500;
      text-align: center;
      margin-bottom: 0.8rem;
      color: rgba(#fd841f, 0.8);
    }

    &__author {
      font-size: 1.5rem;
      font-weight: 400;
      text-align: right;
      margin-left: auto;
      color: rgba(#c6bebc, 0.8);
    }
  }

  section {
    margin: 20rem auto;
    width: 100%;
    max-width: 80vw;
    padding: 0 1rem;

    &:first-of-type {
      margin: 10rem auto;
    }

    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10rem;

    &:nth-of-type(even) {
      flex-direction: row-reverse;
    }

    .section-text {
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;

      .section-heading {
        font-size: 3rem;
        font-weight: 500;
        margin-bottom: 0.8rem;
        letter-spacing: 1.2px;
      }

      .section-body {
        font-size: 1.5rem;
        font-weight: 400;
        line-height: 1.5;
        letter-spacing: 1.2px;
        color: rgba(#c6bebc, 0.8);
      }
    }

    .section-image {
      width: 150rem;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 0.5rem;
      }
    }
  }

  .socials {
    margin-bottom: 10rem;

    .socials-heading {
      font-size: 3rem;
      font-weight: 500;
      margin-bottom: 5rem;
      letter-spacing: 1.2px;
      text-align: center;
    }

    .socials-image-grid {
      display: grid;
      width: 80%;
      margin: 0 auto;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      gap: 10px;

      img {
        width: 100%;
        border-radius: 5px;
      }

      .social-link-wrapper {
        width: 100%;
        background-color: #fd841f;
        position: relative;
        overflow: hidden;
        border-radius: 5px;

        &.blue {
          background-color: $accent-color;
        }

        img {
          width: 12rem;
          position: absolute;
          left: 50%;
          bottom: 50%;
          transform: translate(-50%, 50%);
          opacity: 1;
          transition: all 0.2s ease-in;
        }
      }
    }
  }
</style>
