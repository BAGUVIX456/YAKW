<script>
  import { Typoist } from "typoist";
  const typeIt = (selector, text, options) => {
    const textArea = document.querySelector(selector);
    if (textArea) {
      const typoist = new Typoist({
        ...options,
        appendFunction: (character) =>
          new Promise((resolve) => {
            textArea.innerHTML += character;
            resolve("appended char");
          }),
        deleteFunction: () =>
          new Promise((resolve) => {
            textArea.innerHTML = textArea.innerHTML.slice(0, -1);
            resolve("deleted char");
          }),
      });

      typoist.type(text);
    }
  };

  window.onload = () => {
    typeIt("#error-desc", "You tried to access a forbidden page. This incident will be reported.", {
      speed: 10,
      mistakeProbability: 0.1,
    });
  };
</script>

