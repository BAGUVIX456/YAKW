---
import Layout from "../../layouts/Layout.astro";
import TeamCard from "../../components/TeamCard.astro";
import TeamTab from "../../components/TeamTab.astro";

import ADVISORS from "../../data/advisors.json";
import CTMS from "../../data/ctms.json";
import EXECUTIVES from "../../data/execs.json";

export function getStaticPaths() {
  return [{ params: { team: "ctms" } }, { params: { team: "executives" } }, { params: { team: "advisors" } }];
}

const team = Astro.params.team as string;

let team_members = ADVISORS;

switch (team) {
  case "ctms":
    team_members = CTMS;
    break;
  case "executives":
    team_members = EXECUTIVES;
    break;
  case "advisors":
    team_members = ADVISORS;
    break;
}
---

<Layout title="Meet our Team">
  <main>
    <TeamTab />
    <ul role="list" class="link-card-grid">
      {
        team_members.length > 0 &&
          team_members.map((member) => (
            <TeamCard name={member.name} github_username={member.github_username} linkedin_url={member.linkedin_url} />
          ))
      }
    </ul>
  </main>
</Layout>
<style lang="scss">
  @import "../../styles/index.scss";
  main {
    padding: 2rem;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    margin-bottom: 10%;

    @media (max-width: #{$screen-xl-max}) {
      margin-top: 10rem;
    }
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(17ch, 1fr));
    grid-gap: 1rem 2rem;

    @media (max-width: #{$screen-xl-max}) {
      grid-template-columns: repeat(auto-fit, minmax(12ch, 1fr));
      grid-gap: 1rem;
    }
  }
</style>
