---
import Layout from "../../layouts/Layout.astro";
//import AboutSection from "../components/AboutSection.astro";
//import Hero from "../components/Hero.astro";
import TeamCard from "../../components/TeamCard.astro";
import TeamTab from "../../components/TeamTab.astro";

import ADVISORS from "../../data/advisors.json";
import CTMS from "../../data/ctms.json";
import EXECUTIVES from "../../data/execs.json";

export function getStaticPaths() {
  return [
    { params: { team: "Core Team Members" } },
    { params: { team: "Executives" } },
    { params: { team: "Advisors" } },
  ];
}

const team = Astro.params.team as string;

var team_members = ADVISORS;
if (team === "Core Team Members") {
  team_members = CTMS;
}
if (team === "Executives") {
  team_members = EXECUTIVES;
}
---

<Layout title="Meet our Team">
  <main>
    <TeamTab />
    <div class="container">
      <ul role="list" class="link-card-grid">
        {
          team_members.length > 0 &&
            team_members.map((advisor) => (
              <TeamCard name={advisor.name} github_username={advisor.github_username} gref="" lref="" />
            ))
        }
      </ul>
    </div>
  </main>
</Layout>
<style>
  main {
    padding: 2rem;
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    margin-bottom: 10%;
    /*max-width: calc(100% - 2rem);
		font-size: 20px;
	  line-height: 1.6;*/
  }

  .link-card-grid {
    display: grid;
    align-items: center;
    justify-items: center;
    grid-template-columns: repeat(auto-fit, minmax(15ch, 1fr));
    grid-gap: 1rem 3rem; /*calc(10px + 10%)*/
    padding: 1rem;
  }

  /* .member {
    text-align: center;
    padding-bottom: 2rem;
  } */
</style>
