---
import Icon from "./Icon.astro";
//import Section from "./Section.astro";
export interface Props {
    //id: string;
    name: string;
    pref: string;
    gref: string;
    lref: string;
}

const {name, pref, gref, lref} = Astro.props as Props;
---

<li class="link-card">
  <a class="pfp" href={pref}>
    <Icon icon="profile" />
  </a>
  <br>
  <h4 class="name">
    {name}
  </h4>
  <br>
	<div>
    <a class="icon" href={gref}>
      <Icon icon="github" />
    </a>
    <a class="icon" href={lref}>
      <Icon icon="linkedin" />
    </a>
  </div>
</li>
<style lang="scss">
  @import "../styles/index.scss"; 
    .link-card {
      /*position: fixed;
      left: 2rem;
      top: 2rem;
      transform: translateX(-0%);*/

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: top;
      text-align: center;

      max-width: 100%;
      width: 12rem;
      max-height: 100%;
      height: 15rem;
      z-index: -1;
      background-color: $background-secondary;
      border-radius: 10px;
		  list-style: none;
		  padding: calc(1.5rem - 1px);
		
		  /*background-image: none;
		  background-size: 400%;		
		  background-position: 100%;
		  transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);*/

		  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

  .pfp{
    padding-top: 10px;
  }

  .icon {
    padding: 10px;
  }
  
  .name{
  }

  
